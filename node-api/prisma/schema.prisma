generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password      String
  profile_image String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // --- MUDANÇA: O campo de texto 'role' foi substituído pelo relacionamento abaixo ---
  roleId        Int     // Armazena o ID da função
  role          Role     @relation(fields: [roleId], references: [id]) // Define a conexão com a tabela Role

  @@map("users")
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  email     String
  token     String   @unique
  createdAt DateTime @default(now())

  @@map("password_resets")
}

model Credential {
  id        String   @id @default(cuid())
  name      String
  path      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("credentials")
}

// --- NOVO MODELO: Tabela dedicada para armazenar as Funções ---
model Role {
  id        Int      @id @default(autoincrement())
  name      String   @unique // Garante que não hajam funções com nomes duplicados
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     User[] // Define que uma função pode estar associada a vários usuários

  @@map("roles")
}